<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_assessments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Schedule">
    <Button
        android:id="@+id/view_assessment"
        android:layout_width="333dp"
        android:layout_height="96dp"
        android:backgroundTint="#3700B3"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:text="@string/view_assessments"
        android:textSize="14sp"
        android:textStyle="bold"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_courses"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/view_courses"
        android:layout_width="333dp"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#3700B3"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:text="@string/view_courses"
        android:textSize="14sp"
        android:textStyle="bold"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_terms"
        app:layout_constraintVertical_bias="0.035" />

    <Button
        android:id="@+id/view_terms"
        android:layout_width="332dp"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#3700B3"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:text="@string/view_terms"
        android:textSize="14sp"
        android:textStyle="bold"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

</androidx.constraintlayout.widget.ConstraintLayout>